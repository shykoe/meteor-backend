{
  "type": "object",
  "title": "users",
  "properties": {
    "_id": { "type": "string" },
    "phone": { "type": "string" },
    "username": { "type": "string" },
    "emails": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "address": { "type": "string", "format": "email" },
          "verified": { "type": "boolean" }
        },
        "required": [ "address" ]
      },
      "minItems": 1
    },
    "createdAt": { "type": "integer" },
    "name": { "type": "string" },
    "avatarImg": { "type": "string" },
    "role": { "type": "integer", "minimum": 1, "maximum": 100 },
    "balance": { "type": "number", "minimum": 0 },
    "ifPaymentPasswordSet": { "type": "boolean" },
    "isPasswordRst": { "type": "boolean" },
    "addr": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "tel": { "type": "string" },
          "province": { "type": "string" },
          "city": { "type": "string" },
          "district": { "type": "string" },
          "street": { "type": "string" },
          "zip": { "type": "string" }
        },
        "required": [ "name", "tel", "province", "city", "district", "street" ]
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "integer", "minimum": 1, "maximum": 11 },
          "ts": { "type": "integer" },
          "amount": { "type": "number" },
          "orderId": { "type": "string" },
          "outTradeNo": { "type": "string" }
        },
        "required": [ "type", "ts", "amount" ]
      }
    },
    "extraEvents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "integer", "minimum": 51, "maximum": 61 },
          "ts": { "type": "integer" }
        },
        "required": [ "type", "ts"]
        }
      },
    "lastMessageEnterTime": { "type": "number" },
    "receiveMsgs": { "type": "boolean" },
    "receiveInfo": { "type": "boolean" },
    "services": {"type": "object"}
  },
  "required": [ "phone", "createdAt", "role" ]
}
